<p id="notice"><%= notice %></p>

<h1>Poets</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Password</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poets.each do |poet| %>
      <tr>
        <td><%= poet.username %></td>
        <td><%= poet.email %></td>
        <td><%= poet.firstname %></td>
        <td><%= poet.lastname %></td>
        <td><%= poet.password %></td>
        <td><%= poet.user_id %></td>
        <td><%= link_to 'Show', poet %></td>
        <td><%= link_to 'Edit', edit_poet_path(poet) %></td>
        <td><%= link_to 'Destroy', poet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

